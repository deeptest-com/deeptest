<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ngtesting.platform.dao.UserDao" >

    <select id="query" resultType="TstUser"> <!-- resultMap="UserResult" -->
        SELECT * FROM tstUser
    </select>

    <select id="get" parameterType="INTEGER" resultType="TstUser">
        SELECT * FROM TstUser WHERE id = #{id}
    </select>

    <select id="getByToken" parameterType="string" resultType="TstUser">
        SELECT * FROM TstUser WHERE token = #{token}
    </select>

    <update id="update" parameterType="TstUser">
        UPDATE STUDENTS
        SET EMAIL=#{email}, name=#{name}
        WHERE userId=#{id}
    </update>


